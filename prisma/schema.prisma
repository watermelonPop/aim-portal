generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  role      Role
  createdAt DateTime @default(now())
}

enum Role {
  STUDENT
  PROFESSOR
  ADVISOR
}


